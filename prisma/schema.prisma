// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model JobApplication {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Job info
  jobSlug         String
  jobTitle        String

  // Personal info
  legalName       String
  passportNo      String
  countryOfOrigin String
  experience      String
  email           String

  // Resume
  resumeUrl       String?
  resumeFileName  String?

  // Application status
  status          ApplicationStatus @default(PENDING)
  notes           String?
}

enum ApplicationStatus {
  PENDING
  REVIEWED
  INTERVIEWING
  OFFERED
  REJECTED
  HIRED
}

model ContactSubmission {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Contact info
  name      String
  email     String
  phone     String?

  // Project details
  budget    String
  message   String   @db.VarChar(10000)

  // Status tracking
  status    ContactStatus @default(NEW)
  notes     String?
}

enum ContactStatus {
  NEW
  CONTACTED
  IN_DISCUSSION
  PROPOSAL_SENT
  CONVERTED
  CLOSED
}
